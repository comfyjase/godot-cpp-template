		<!-- set default session timeout to 5m -->  
		<TestSessionTimeout>500000</TestSessionTimeout>  
		<TreatNoTestsAsError>true</TreatNoTestsAsError>  
	</RunConfiguration>  
	<Doctest>  
		<GeneralSettings>  
			<CommandArguments>--headless --test</CommandArguments>  
		</GeneralSettings>  
		<DiscoverySettings>  
			<SearchDirectories>  
				<string>modules</string>  
				<string>tests</string>  
			</SearchDirectories>  
		</DiscoverySettings>  
	</Doctest>  
</RunSettings>  
